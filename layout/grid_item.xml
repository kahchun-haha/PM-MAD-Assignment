<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/grid_item"
        android:layout_width="158dp"
        android:layout_height="135dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155"
        app:srcCompat="@drawable/grid_item_background" />

    <TextView
        android:id="@+id/emergency_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/black_circle_for_grid"
        android:gravity="center"
        android:text="li"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/grid_item"
        app:layout_constraintEnd_toEndOf="@+id/grid_item"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/grid_item"
        app:layout_constraintTop_toTopOf="@+id/grid_item"
        app:layout_constraintVertical_bias="0.48" />

    <TextView
        android:id="@+id/emergency_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="name"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/emergency_profile_pic"
        app:layout_constraintStart_toStartOf="@+id/emergency_profile_pic"
        app:layout_constraintTop_toBottomOf="@+id/emergency_profile_pic" />

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="58dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="@+id/grid_item"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="@+id/grid_item"
        app:layout_constraintTop_toTopOf="@+id/grid_item"
        app:srcCompat="@drawable/delete_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>