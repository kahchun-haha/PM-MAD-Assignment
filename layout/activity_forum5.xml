<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:theme="@style/Theme.WhiteText"
    tools:context=".Dashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="@color/black"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap"
            app:toolbarId="@id/toolbar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dv61"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Gender-Based Violence And Domestic Violence On The Rise in Malaysia: A Growing Concern"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="@font/times_nr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="In recent years, domestic violence cases in the country have surged, which according to statistics, were compounded by the restrictions and challenges brought about by the pandemic."
                android:textSize="16sp"
                android:fontFamily="@font/helvetica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="BY SHIVANI SUPRAMANI JUNE 26, 2023"
                android:textSize="18sp"
                android:fontFamily="@font/times_nr" />

            <!-- First TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="KOTA KINABALU – A businesswoman, who alleges that she was assaulted by her spouse, is calling for swift justice in her domestic violence case."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <!-- Second TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Earlier this morning, police apprehended four individuals in connection with the suspected murder of a woman at a shophouse in Taman Song Choon. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="As reported by Bernama, Ipoh district police chief ACP Yahaya Hassan said in a statement that the murder suspect, a 23-year-old man who is believed to be the victim’s boyfriend, confessed to assaulting the 24-year-old woman following an argument on the top floor of the shophouse."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Acting on a tip-off received at 4.34 am, the police arrested the four individuals, including the boyfriend’s mother, at the scene where both the victim and suspect were residing. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Medical personnel confirmed the victim’s death after finding her unconscious on a mattress at the location."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="In the course of the investigation, the police seized a broomstick, suspected to have been used by the boyfriend, who tested positive for methamphetamine, to assault the victim. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Additionally, four mobile phones were confiscated."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Gender Based Violence and Domestic Abuse in Malaysia"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="In recent years, domestic violence cases in the country have surged, which according to statistics, were compounded by the restrictions and challenges brought about by the pandemic. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Disturbing statistics reveal a significant increase in gender-based violence, shedding light on a grave issue that demands urgent attention. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="From domestic violence to sexual harassment and human trafficking, the impact on individuals and society at large is deeply concerning."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Escalation of Domestic Violence"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Malaysia has witnessed a sharp rise in domestic violence cases starting from the first Movement Control Order back in 2020."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Over the past two years, more than 9,000 cases have been reported, reflecting the distressing reality faced by numerous individuals within their own homes."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="These statistics were pointed out by former Women, Family, and Community Development Minister Datuk Seri Rina Harun as reported by the New Strait Times."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Speaking to NST, research fellow at Ungku Aziz Centre for Development Studies (UAC), Universiti Malaya Dr Rulia Akhtar said between 2000 and 2018, a staggering total of 153,507 cases were documented, involving family abuse, assault, mistreatment of domestic help, maltreatment of children, disrespect for decency, and sex crimes. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Alarming Increase in Reported Cases"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The Women, Family, and Community Development Ministry reported a 42% surge in domestic violence cases in 2021, with a total of 7,468 cases, compared to 5,260 cases in the previous year. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="This substantial rise underscores the urgent need for comprehensive strategies and support systems to address the underlying causes and provide protection for victims. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="It is clear that domestic violence remains a persistent problem that must be confronted head-on."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Verbal Sexual Harassment and Workplace Discrimination"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Gender-based violence also extends beyond the confines of homes."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Back in 2021, a survey conducted by the Centre for Governance and Political Studies and the All-Action Women’s Society revealed that 57% of Malaysian women claim to regularly experience verbal sexual harassment while walking down the road. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="This distressing reality highlights the prevalence of harassment that women face in public spaces, emphasizing the need for societal awareness and change."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The workplace is not exempt from these issues either."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="In 2020, a poll conducted by the Women’s Aid Organisation revealed that 62% of the surveyed women encountered work-related sexual harassment, while 56% reported experiencing employment discrimination. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="These figures expose the persistent challenges that women face in professional environments, undermining their safety, well-being, and career prospects."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Human Trafficking: A Violation of Human Rights"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Tragically, Malaysia is also not immune to the global problem of human trafficking. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The Borgen Project report indicates that approximately 212,000 individuals in Malaysia are currently victims of human trafficking. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The escalating numbers of domestic violence cases, along with the prevalence of gender-based violence in Malaysia, are deeply concerning. "
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="In April this year, Selangor topped the chart for the highest number of domestic violence cases, according to data provided by the police."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <!-- Add more views as needed -->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>