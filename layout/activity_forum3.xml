<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:theme="@style/Theme.WhiteText"
    tools:context=".Dashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="@color/black"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap"
            app:toolbarId="@id/toolbar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dv41"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Pregnant Sabah woman alleges domestic violence by ‘VVIP’ husband"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="@font/times_nr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Urging swift justice, businesswoman claims she was told by police that probe would involve lengthy process"
                android:textSize="16sp"

                android:fontFamily="@font/helvetica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Updated 3 months ago · Published on 09 Aug 2023 8:36PM"
                android:textSize="18sp"
                android:fontFamily="@font/times_nr" />

            <!-- First TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="KOTA KINABALU – A businesswoman, who alleges that she was assaulted by her spouse, is calling for swift justice in her domestic violence case."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <!-- Second TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Her concern stems from the potential prolonged probe on her assailant, who is deemed a “very, very important person” (VVIP)."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The 31-year-old woman, who only wants to be identified as Ms Wong, said she has been informed by police that the case could take a long time as her 57-year-old husband held the highest civil service position in a state ministry."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="His position also carries the distinction of a VVIP, she said."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="She said a divorce has been sought but was not allowed under shariah law as she is pregnant."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="She claimed that her husband had also assaulted her on one occasion despite knowing she carried a child in her."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“I have been up and down the police station to find justice for me and my family, and the baby in my womb."'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“The Waja Squad acts as an agent of change to deal with violence against women in the community,” Aiman said.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“I have been assaulted and beaten up with all my injuries proven in the medical report, as well as the mental breakdown caused by my own husband a few times, even though he was aware I am in my early pregnancy,” she alleged.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“At the police station, I was told by certain officers on my case to wait for the process as the investigation was still ongoing,” said Wong when met at Warisan’s Kota Kinabalu division office here today.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="She had approached the political party for help and was seen accompanied by her older brother when meeting with Warisan leaders Datuk Melanie Chia and Datuk Junz Wong."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The matter of police protection"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="She had lodged three police reports over the alleged assaults. One was on April 18, when her head had been allegedly bashed to a ceiling fan wall switch, the second was on July 4 when, she claims, she had an incident with her husband at his office, and then at home around midnight on July 18 during which she claims to have sustained minor injuries."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="She said she was informed by an officer that an investigation paper had also been opened against her on Monday, after her husband had also lodged a police report against her."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The accusations against her were framed under Section 427, Section 323 and Section 506 of the Penal Code, as well as minor offences under the Sabah Ordinance."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“I have sought an investigation officer on these charges and his answer was that this will take a long process and it might be referred to Bukit Aman and possibly up to Putrajaya as the case involves a VVIP,” she said.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Meanwhile, Chia expressed surprise that police did not refer Wong to an interim protective order as provided for under the Domestic Violence Act 1994."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“Police are supposed to assist the victim of domestic violence to file an application for interim protective order (IPO) regarding the domestic violence.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“IPO is to be granted by the court. This case shows a lack of understanding of domestic violence on the part of police,” she said. – The Vibes, August 9, 2023'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <!-- Add more views as needed -->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>