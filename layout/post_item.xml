<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/forum_post"
        android:layout_width="348dp"
        android:layout_height="152dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="40dp"
        android:src="@drawable/post_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654" />

    <TextView
        android:id="@+id/forum_profilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/chat_profile"
        android:gravity="center"
        android:text="li"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/forum_post"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/forum_post"
        app:layout_constraintTop_toTopOf="@+id/forum_post" />

    <TextView
        android:id="@+id/forum_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="name"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/forum_profilePic"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/forum_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/forum_profilePic" />

    <TextView
        android:id="@+id/myTopic"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Topic goes here"
        app:layout_constraintStart_toEndOf="@+id/forum_profilePic"
        app:layout_constraintTop_toTopOf="@+id/forum_profilePic" />

    <TextView
        android:id="@+id/myDescription"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Description goes here"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/myTopic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myTopic"
        app:layout_constraintTop_toBottomOf="@+id/myTopic" />

</androidx.constraintlayout.widget.ConstraintLayout>