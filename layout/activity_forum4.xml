<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.WhiteText"
    android:background="@color/black"
    tools:context=".Dashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="@color/black"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|snap"
            app:toolbarId="@id/toolbar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dv51"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Over 19k domestic violence cases reported in past three years"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="@font/times_nr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Published:  Apr 13, 2023 3:56 PM ⋅ Updated: 4:30 PM"
                android:textSize="18sp"
                android:fontFamily="@font/times_nr" />

            <!-- First TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="PARLIAMENT | A total of 19,268 cases of domestic violence were reported between 2020 and 2022, according to police statistics."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <!-- Second TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="In 2020, 5,260 cases were recorded, followed by 7,468 cases in 2021 and 6,540 cases in 2022."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Women, Family and Community Development Minister Nancy Shukri revealed this in a written parliamentary reply to Parit Sulong MP Noraini Ahmad, who had asked for the data and what steps the ministry was taking to curb the issue."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“In order to handle and reduce the number of domestic violence cases in society, various initiatives have been carried out continuously by the ministry, specifically through the Committee to Handle Domestic Violence,” Nancy said in her reply.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Among the initiatives that are being carried out include broadening the implementation of advocacy programmes to raise awareness on issues related to domestic violence, providing accessible psycho-social services and counselling, and doubling efforts to promote relevant hotline services."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="The ministry also propagated more programmes to upskill and encourage entrepreneurship among women to empower them to be more financially independent, prepared temporary transit centres in mosques for domestic violence victims, and improved the procedures in handling domestic violence cases, she said."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text='“This ministry will remain committed in our efforts to handle and reduce cases of domestic violence in cooperation with government agencies and NGOs for the wellbeing of the family institution and development of the community,” Nancy said.'
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="In her response, the minister also included a breakdown of the statistics according to state, gender, and race."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/perincian" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="It was reported previously that there was a 360 percent increase in distress calls received over domestic violence between February 2020 – before the movement control order (MCO) was implemented for Covid-19 – and April, when the MCO was in full swing, according to data from the Women’s Aid Organisation (WAO)."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="NGOs reportedly continued to sound sirens of intensified domestic violence even after the first MCO was lifted."
                android:textSize="18sp"
                android:fontFamily="@font/centurysb" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>