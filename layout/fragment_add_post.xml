    <EditText
        android:textColor="@color/black"
        android:id="@+id/topic_header"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/chat_input"
        android:ems="10"
        android:hint="Topic"
        android:maxLines="2"
        android:textColorHint="@color/dark_grey"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/post_holder"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="@+id/post_holder"
        app:layout_constraintTop_toTopOf="@+id/post_holder" />

    <ImageView
        android:id="@+id/post_holder"
        android:layout_width="395dp"
        android:layout_height="388dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/chat_list_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/content"
        android:layout_width="362dp"
        android:layout_height="208dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/chat_input"
        android:ems="10"
        android:textColorHint="@color/dark_grey"
        android:gravity="start"
        android:hint="Enter description"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="@+id/topic_header"
        app:layout_constraintStart_toStartOf="@+id/topic_header"
        app:layout_constraintTop_toBottomOf="@+id/topic_header" />

    <Button
        android:textColor="@color/white"
        android:id="@+id/add_lo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="@string/add_post"
        app:layout_constraintEnd_toEndOf="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/content" />




