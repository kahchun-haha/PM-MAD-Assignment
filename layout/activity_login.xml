    <ImageView
        android:id="@+id/login_register_btn"
        style="?android:borderlessButtonStyle"
        android:layout_width="182dp"
        android:layout_height="57dp"
        android:layout_marginTop="35dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/register_now"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toBottomOf="@+id/login_button"

        app:srcCompat="@drawable/login_button_background" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/registerWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_now"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_register_btn"
        app:layout_constraintEnd_toEndOf="@+id/login_register_btn"
        app:layout_constraintStart_toStartOf="@+id/login_register_btn"
        app:layout_constraintTop_toTopOf="@+id/login_register_btn" />

    <ImageView

        android:id="@+id/login_deco1"
        android:layout_width="168dp"
        android:layout_height="154dp"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_deco" />

    <ImageView
        android:id="@+id/login_brandlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/black_modified" />


    <ImageView
        android:id="@+id/unhide"
        android:layout_width="41dp"
        android:layout_height="51dp"


        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_password"
        app:layout_constraintEnd_toEndOf="@+id/login_password"
        app:layout_constraintTop_toTopOf="@+id/login_password"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/eye_removebg_preview" />

    <ImageView
        android:id="@+id/hide"
        android:layout_width="41dp"
        android:layout_height="51dp"


        app:layout_constraintBottom_toBottomOf="@+id/login_password"
        app:layout_constraintEnd_toEndOf="@+id/login_password"
        app:layout_constraintTop_toTopOf="@+id/login_password"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/eye2_removebg_preview" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Forgot Password?"
        android:textColor="@color/light_blue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/login_password"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />


