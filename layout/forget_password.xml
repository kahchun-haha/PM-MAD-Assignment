<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/forgetTitle"
        android:layout_width="333dp"
        android:layout_height="39dp"
        android:layout_marginTop="0dp"
        android:background="@color/light_blue"
        android:gravity="center"
        android:text="Forget Password?"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/forgetHolder"
        android:layout_width="333dp"
        android:layout_height="154dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/forgetTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/forgetTitle"
        app:layout_constraintTop_toBottomOf="@+id/forgetTitle"
        app:srcCompat="@drawable/dialog_container" />

    <EditText
        android:id="@+id/realEmail"
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:hint="Enter email address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/forgetHolder"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/forgetHolder"
        app:layout_constraintTop_toBottomOf="@+id/forgetTitle" />

    <Button
        android:id="@+id/undoForgetBtn"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="CANCEL"
        app:layout_constraintStart_toStartOf="@+id/forgetHolder"
        app:layout_constraintTop_toBottomOf="@+id/realEmail" />

    <Button
        android:id="@+id/sureForgetBtn"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:text="CONFIRM"
        app:layout_constraintEnd_toEndOf="@+id/forgetHolder"
        app:layout_constraintTop_toBottomOf="@+id/realEmail" />

    <ImageView
        android:id="@+id/key"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/forgetTitle"
        app:layout_constraintStart_toStartOf="@+id/forgetTitle"
        app:layout_constraintTop_toTopOf="@+id/forgetTitle"
        app:srcCompat="@drawable/key_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>